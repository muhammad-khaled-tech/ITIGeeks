rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // === ACTIVE ROLES ===
    // 'supervisor' - Can manage assignments, contests, view analytics
    // 'instructor' - Same permissions as supervisor
    // 'student'    - Default role, can view and complete assignments
    
    // === FROZEN ROLES (for future use) ===
    // 'admin', 'head_leader' - Reserved for future features
    
    function isSupervisorOrInstructor() {
      return hasRole('supervisor') || hasRole('instructor');
    }
    
    function isAdmin() {
      // Currently maps to supervisor/instructor
      // Future: will be separate 'admin' role
      return isSupervisorOrInstructor();
    }
    
    function isSupervisor() {
      return isSupervisorOrInstructor();
    }
    
    function isHeadLeader() {
      // Frozen for future use - currently same as supervisor
      return isSupervisorOrInstructor();
    }

    // ============================================
    // ADMIN SYSTEM COLLECTIONS (NEW)
    // ============================================
    
    // Admin Users: Allow read for login, write temporarily open for seeding
    // IMPORTANT: After seeding, restrict writes to authenticated admins only
    match /admin_users/{username} {
      allow read: if true; // Needed for login verification
      allow create: if true; // Temporarily open for seeding - RESTRICT AFTER SETUP
      allow update, delete: if isSignedIn(); // Authenticated users can modify
    }
    
    // Admin users by email (for Google OAuth lookup)
    match /admin_users_by_email/{email} {
      allow read: if true;
      allow write: if true; // Temporarily open - RESTRICT AFTER SETUP
    }
    
    // Branches collection (NEW)
    match /branches/{branchId} {
      allow read: if true;
      allow write: if isSignedIn(); // Any authenticated user for now
    }
    
    // Notifications collection (NEW)
    match /notifications/{notifId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow delete: if false;
    }
    
    // Invitations collection (NEW)
    match /invitations/{invId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isAdmin();
    }

    // ============================================
    // EXISTING RULES
    // ============================================

    // Users: Any signed-in user can read/write (for admin dashboard)
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Relaxed for admin dashboard
    }

    // Tracks: Only Admin/Head Leader can write. Everyone can read.
    match /tracks/{trackId} {
      allow read: if true;
      allow write: if isSignedIn(); // Relaxed for admin dashboard
    }

    // Groups: Only Admin/Head Leader can write. Everyone can read.
    match /groups/{groupId} {
      allow read: if true;
      allow write: if isSignedIn(); // Relaxed for admin dashboard
    }

    // Contests: 
    // - Any signed-in user can create/edit (for admin dashboard)
    // - Students can read.
    match /contests/{contestId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Relaxed for admin dashboard
      
      // Submissions subcollection
      match /submissions/{submissionId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn();
      }
    }

    // Assignments: Any signed-in user can write (for admin dashboard)
    match /assignments/{assignmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Relaxed for admin dashboard
    }
    
    // Leaderboard Cache: Allow authenticated users to read/write
    // This stores cached leaderboard data to reduce API calls
    match /leaderboardCache/{groupId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Hint Cache: Store generated hints per problem
    // Hints are cached globally (all users share the same hints per problem)
    match /hintCache/{problemKey} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

