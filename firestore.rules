rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isSupervisor() {
      return hasRole('supervisor') || isAdmin();
    }
    
    function isHeadLeader() {
      return hasRole('head_leader') || isAdmin();
    }

    // Users: Users can read/write their own profile. Admins/Supervisors can read all.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Tracks: Only Admin/Head Leader can write. Everyone can read.
    match /tracks/{trackId} {
      allow read: if true;
      allow write: if isHeadLeader();
    }

    // Groups: Only Admin/Head Leader can write. Everyone can read.
    match /groups/{groupId} {
      allow read: if true;
      allow write: if isHeadLeader();
    }

    // Contests: 
    // - Supervisor can create/edit.
    // - Students can read.
    match /contests/{contestId} {
      allow read: if isSignedIn();
      allow write: if isSupervisor();
      
      // Submissions subcollection
      match /submissions/{submissionId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn(); // Validation of time window should be done in Cloud Functions or client-side strictness for now
        allow update, delete: if isAdmin();
      }
    }

    // Assignments: Only Supervisor can write.
    match /assignments/{assignmentId} {
      allow read: if isSignedIn();
      allow write: if isSupervisor();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
